# ClovesPluralLink API Configuration

# Server
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=clovesplural
DB_PASSWORD=your_secure_password
DB_NAME=clovesplural_link

# Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:5173/auth/callback
DISCORD_BOT_TOKEN=your_discord_bot_token

# JWT
JWT_SECRET=your_super_secure_jwt_secret_change_this
JWT_EXPIRES_IN=7d

# PluralKit API
PLURALKIT_API_URL=https://api.pluralkit.me/v2
PLURALKIT_USER_AGENT=ClovesPluralLink/1.0

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
